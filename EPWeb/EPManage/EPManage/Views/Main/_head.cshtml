@model EPManageWeb.Entities.Models.ClothesType
<div class="left">
    <img src="@Url.Content("~/Images/Logo.png")" alt="EP Logo" />
</div>
<div class="right">
    <img src="@Url.Content("~/Images/AdminInfo.png")"/>
</div>
<div class="center">
    <div class="quickSearch">
        <div class="title">样板编号/大货编号</div>
        <div class="quickSearchBox">
            <input type="text" />
            <input type="image" src="@Url.Content("~/Images/submit.png")" />
        </div>
    </div>
    <div class="nav">
        <ul class="nav nav-pills">
            @foreach (var t in ViewBag.ClothesTypes as List<EPManageWeb.Entities.Models.ClothesType>)
            {
                if (t.Id == Model.Id)
                {
                <li><span class="active">@Html.ActionLink(@t.Name, "Index", new { id = t.Id })</span></li>
                }
                else
                {
                <li><span>@Html.ActionLink(@t.Name, "Index", new { id = t.Id })</span></li>
                }
            }
            <li><span><a href="#myModal" data-toggle="modal">添加款式</a></span></li>
            <li><span>@Html.ActionLink("使用统计", "Index", "Statistic")</span></li>
            <li><span>@Html.ActionLink("编辑记录", "Edit", new { id = Model.Id })</span></li>
        </ul>
    </div>
</div>
<div class="clearfix"></div>
