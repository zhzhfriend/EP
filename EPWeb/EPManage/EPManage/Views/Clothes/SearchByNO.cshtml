@model IList<ClothesDetailModel>

@{
    ViewBag.Title = "搜索结果";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section head{
    <link href="@Styles.Url("~/Content/addClothes.css")" rel="stylesheet"/>
}

<div class="searchResult">
    <div id="container">
        @if (Model != null && Model.Count > 0)
        {
            <ul class="nav">
                @foreach (var t in Model)
                {
                    <li class="span2">
                        <div>
                            <div class="pic">
                                <a href="/Main/Detail/@t.Id" target="_blank">
                                    <img src="@t.ClothesImages[0]" alt="pic" width="119" height="141"/></a>
                            </div>
                            <div class="right">
                                <div>
                                    样衣图片
                            <img src="@Url.Content("~/Images/detailLink.png")" data="@t.Id" data-type="clothes" class="detailIcon" />
                                </div>
                                <div>
                                    款式图
                            <img src="@Url.Content("~/Images/detailLink.png")" data="@t.Id" data-type="style" class="detailIcon"  />
                                </div>
                                <div>
                                    版型图
                            <img src="@Url.Content("~/Images/detailLink.png")" data="@t.Id" data-type="modelversion" class="detailIcon"  />
                                </div>
                            </div>
                            <div class="clearfix">
                            </div>
                        </div>
                        <div class="clothesNO">
                            <div class="left">
                                <div>
                                    样板编号:@t.SampleNO
                                </div>
                                <div>
                                    大货编号：@t.ProductNO
                                </div>
                            </div>
                            <div class="detailLink">
                                <a href="/Main/Detail/@t.Id" target="_blank">
                                    <img src="@Url.Content("~/Images/detailLink1.png")" />
                                </a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="alert">
                未找到结果
            </div>
        }

    </div>
    <div class="clearfix"></div>
    <img src="@Url.Content("~/Images/bottomBg.png")" />
</div>
