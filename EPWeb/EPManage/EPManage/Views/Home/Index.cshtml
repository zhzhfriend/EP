@model EPManageWeb.Models.UserLoginModel
@{
    ViewBag.Title = "登陆";
}




<div class="hero-unit">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(null, new { @class = "alert" })
        <div class="control-group">
            <label class="control-label" for="inputEmail">@Html.LabelFor(t => t.UserName) </label>
            <div class="controls">
                @Html.TextBoxFor(t => t.UserName)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputPassword">@Html.LabelFor(t => t.PassWord)</label>
            <div class="controls">
                @Html.PasswordFor(t => t.PassWord)
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn">登陆</button>
            </div>
        </div>
    }
</div>

