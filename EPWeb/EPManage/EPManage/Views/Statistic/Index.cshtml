@model IList<EPManageWeb.Entities.Models.Clothes>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{}


<table class="table table-striped table-bordered">
    <tr>
        <td>
            <div class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">品类</a>
                @if (ViewBag.Pingleis != null && (ViewBag.Pingleis as IList<EPManageWeb.Entities.Models.ClothesPartType>).Count > 0)
                {
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        @foreach (var t in (ViewBag.Pingleis as IList<EPManageWeb.Entities.Models.ClothesPartType>))
                        {
                            <li>@Html.ActionLink(t.Name, "type", new { type = t.Name })</li>
                        }
                    </ul>
                }
            </div>
        </td>
        <td>样板编号</td>
        <td>大货编号</td>
        <td>使用次数</td>
    </tr>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.PingLei</td>
            <td>@t.SampleNO</td>
            <td>@t.ProductNO</td>
            <td>@t.ViewCount</td>
        </tr>
    }
</table>
